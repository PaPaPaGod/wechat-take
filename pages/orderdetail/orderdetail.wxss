.detail-container{
    height:auto;
    clear:both;
    overflow:hidden;
    margin:20px 10px auto 10px;
}

.detail-container:before{
    content: '';
    position: absolute;
    z-index: -3;
    width:90%;
    height:80%;
    left:18px;
    bottom:8px;
    box-shadow: 0px 8px 20px rgba(0,0,0,0.6);
    transform:skew(-12deg) rotate(-4deg);
}
.detail-container view:after{
    content: '';
    position: absolute;
    z-index: -4;
    width:90%;
    height:80%;
    right:18px;
    bottom:8px;
    box-shadow: 0px 8px 20px rgba(0,0,0,0.6);
    transform:skew(12deg) rotate(4deg);
}