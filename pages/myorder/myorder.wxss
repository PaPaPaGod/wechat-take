/* pages/myorder/myorder.wxss */
@import '../../utils/refreshView.wxss';

.space {
  background: white;
  display: block;
  font-weight: 600;
  border: 1px solid #ddd;
  margin: -1px 0;
  padding: 20rpx;
}

.box {
  height: auto;
  clear: both;
  overflow: hidden;
  margin: 20px 10px auto 10px;
}

.line{
  margin-left: 10px;
  width:95%;
  height:2rpx;
  background:#aaa;  
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.item-style {
  display: flex;
  position: relative;
  width: 330px;
  height: auto;
  background: #fff;
  margin: auto auto 20px 13px;
  border: 2px solid #EFEA5E;
  box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.27);
}

.flex-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 50px;
  width: 400px;
  
}

.company {
  margin-top:-20px;
  box-sizing: border-box;
  padding: 10px;
  width: 230px;
  height: 100px;
  text-align: left;
}

.state{
  margin-top:-20px;
  box-sizing: border-box;
  padding: 10px;
  width: 100px;
  height: 100px;
  text-align: right;
}


.box view:before {
  content: '';
  position: absolute;
  z-index: -3;
  width: 90%;
  height: 80%;
  left: 18px;
  bottom: 8px;
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.6);
  transform: skew(-12deg) rotate(-4deg);
}

.box view:after {
  content: '';
  position: absolute;
  z-index: -4;
  width: 90%;
  height: 80%;
  right: 18px;
  bottom: 8px;
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.6);
  transform: skew(12deg) rotate(4deg);
}

.text-style{
  box-sizing: border-box;
  font-size: 10px;
  color:gray;
  border: 1px solid #aaa
}

.title{
  margin-left: 10px;
  text-align: left;
  width: 80px;
  box-sizing: border-box;
  font-size: 13px;
  color:gray;
}

.content{
  margin-left: 30px;
  text-align: right;
  width: 200px;
  box-sizing: border-box;
  font-size: 13px;
  color:gray;
}

.portrait{
  margin: 50rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 15rpx;
}

.status{
  margin: 50rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 15rpx;
}

.order-detail{
  margin-top: 70rpx;
  font-size: 28rpx;
}